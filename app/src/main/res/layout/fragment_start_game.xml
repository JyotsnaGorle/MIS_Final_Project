<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartGame"
    android:background="@drawable/ic_backgroundimage">

    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp">
        <TableRow>
            <TextView
                android:id="@+id/title"
                android:text="@string/app_name"
                android:textSize="55sp"
                android:textColor="#1b1b1b"
                android:layout_width="fill_parent" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="90sp">
            <FrameLayout>
                <View
                    android:id="@+id/myRectangleView"
                    android:layout_width="fill_parent"
                    android:layout_height="10sp"
                    android:background="@drawable/my_rect"/>
            </FrameLayout>
        </TableRow>
        <TableRow
            android:layout_marginBottom="10sp"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:orientation="horizontal">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25sp"
                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/dices"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/dice1"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:background="@drawable/my_dice1"
                                android:layout_marginBottom="7.5sp"
                                android:tag="0"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/dice2"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:background="@drawable/my_dice2"
                                android:layout_marginBottom="7.5sp"
                                android:tag="1" />
                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/dice3"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:background="@drawable/my_dice3"
                                android:layout_marginBottom="7.5sp"
                                android:tag="2"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/dice4"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:background="@drawable/my_dice4"
                                android:layout_marginBottom="7.5sp"
                                android:tag="3"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/dice5"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:background="@drawable/my_dice5"
                                android:tag="4"/>
                        </TableRow>
                    </TableLayout>

                </TableLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/my_layout">
                    <TableRow
                        android:layout_marginBottom="10sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/combination"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/points"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/ones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ones"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/select1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor" />
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/twos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/twos"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/select2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/threes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/threes"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/select3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/fours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fours"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/select4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/fives"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fives"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/select5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/threeOfAKind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/threeOfAKind"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/selectThreeKind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/fourOfAKind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fourOfAKind"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/selectFourKind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/littleStraight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/littleStraight"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/selectLittleStraight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/bigStraight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bigStraight"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/selectBigStraight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/house"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/house"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/selectHouse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/chance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/chance"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/selectChance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TableRow>
                    <TableRow
                        android:layout_marginStart="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment"
                            android:textStyle="bold"
                            android:layout_marginTop="10sp"
                            android:textColor="@color/primaryTextColor"/>
                        <TextView
                            android:id="@+id/selectPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="10sp"
                            android:textColor="@color/primaryTextColor"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_marginBottom="20sp">

            <LinearLayout
                android:id="@+id/selected"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/my_button"
                android:orientation="vertical">
            <TextView
                android:id="@+id/selectedText"
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:layout_marginStart="10sp"
                android:text="@string/keepSelected"
                android:textColor="@color/secondaryTextColor"
                android:textSize="20sp" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:id="@+id/back"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/my_layout"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="100sp"
                    android:layout_marginStart="10sp"
                    android:text="@string/back"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="20sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</FrameLayout>